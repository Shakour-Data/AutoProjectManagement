    "risk_calculation_methods": {
      "simple_risk_score": {
        "formula": "impact × probability",
        "description": "Basic risk score calculation",
        "thresholds": {
          "low": 0.1,
          "medium": 0.3,
          "high": 0.5,
          "critical": 0.7
        }
      },
      "weighted_risk_score": {
        "formula": "impact × probability × category_weight",
        "description": "Risk score weighted by category importance",
        "category_weights": {
          "schedule_risks": 1.2,
          "cost_risks": 1.1,
          "technical_risks": 1.3,
          "resource_risks": 1.0,
          "external_risks": 0.9
        }
      },
      "expected_monetary_value": {
        "formula": "probability × financial_impact",
        "description": "Monetary impact expectation",
        "currency": "USD"
      },
      "risk_exposure": {
        "formula": "risk_score × task_complexity × dependency_factor",
        "description": "Comprehensive risk exposure calculation",
        "complexity_factors": {
          "simple": 1.0,
          "moderate": 1.5,
          "complex": 2.0,
          "very_complex": 3.0
        },
        "dependency_factors": {
          "independent": 1.0,
          "low_dependency": 1.2,
          "medium_dependency": 1.5,
          "high_dependency": 2.0
        }
      }
    },
    "risk_mitigation_strategies": {
      "avoidance": {
        "description": "Eliminate the risk by changing plans",
        "effectiveness": 0.9,
